<ul>
  <%@contacts.each do |contact|%>
    <li>
      <%= link_to contact.name, :controller => :contacts, :action => :details, :id => contact.id %>
      <% if contact.favorite == true %>
        <span>favorite</span>
      <%end%>
      <%= link_to "Make favorite", :controller => :contacts, :action => :favorite, :id => contact.id %></li>
  <%end%>
</ul>
<%= link_to "New Contact", { :controller => :contacts, :action => :new }, { class: "btn btn-primary btn-lg", style: "width: 100%;" } %>
<div style="margin-top:200px;">
  <form action="/contacts/search"  method ="GET">
    <div>
      <label for="text">Search</label>
      <input type="text" name="text" id="text">
    </div>
    <button type="submit">Search</button>
  </form>
</div>
