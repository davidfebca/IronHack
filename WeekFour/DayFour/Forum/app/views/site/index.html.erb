<section class="secttion">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div style="margin:0 auto;width:500px; margin-top:100px;padding:20px; ">
          <h1 style="text-align:center">Login into Movie Forum</h1>
          <form action="/login"   method ="POST">
            <div class="form-group">
              <label for="username">Username</label>
              <input class="form-control" type="text" name="user[username]" id="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input class="form-control" type="text" name="user[password]" id="password">
            </div>
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button class="btn btn-default form-control" type="submit">Login</button>
          </form>

        </div>

      </div>
    </div>
  </div>
</section>
