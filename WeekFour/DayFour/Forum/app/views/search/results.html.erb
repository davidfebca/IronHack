<section class="secttion" style="margin-top:100px;">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
          <h1 style="text-align:center;">Results</h1>
          <ul>
            <%if @results_in_local%>
              <%@movies.each do |movie|%>
                <li><%=movie.title%> - <%= link_to "Details", {:controller => "movies", :action => "details", :id => movie.id }%></li>
              <%end%>
            <%else%>
            <%@movies.each do |movie|%>
              <li><%=movie.title%> - <%= link_to "Save", {:controller => "movies", :action => "save", :id => movie.id }%></li>
            <%end%>
            <%end%>
          </ul>
      </div>
    </div>
  </div>
</section>
