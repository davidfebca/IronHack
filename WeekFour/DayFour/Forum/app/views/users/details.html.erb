<section class="secttion" style="margin-top:100px;">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
          <h1>Details for user <%= @user.username%></h1>
          <h2>Comments</h2>
          <ul>
            <%@user.comments.each do |comment|%>
              <li><%=comment.content%> - in <%=comment.movie.title%>  at <%=comment.created_at%></li>
            <%end%>
          </ul>
      </div>
    </div>
  </div>
</section>
