<section class="concerts">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><%=@concert.title%></h1>
        <%=image_tag(@concert.image.url(:large))%>
        <p>
          <%=@concert.description%>
        </p>
        <p>
          Price:
          <%=@concert.price%>
        </p>
        <p>
          Venue:
          <%=@concert.venue%>
        </p>
        <ul>
          <%@concert.comments.each do |comment|%>
            <li><%=comment.content%> - by <%=comment.user%></li>
          <%end%>
        </ul>
      </div>
      <div class="col-md-6">
        <%= form_for @comment do |f|%>
          <%= f.label :content %>
          <%= f.text_field :content %><br/>
          <%= f.label :user %>
          <%= f.text_field :user %><br/>
          <%= f.hidden_field :concert_id ,:value =>@concert.id %><br/>
          <%= f.button%>
        <%end%>
      </div>
    </div>
  </div>
</section>
